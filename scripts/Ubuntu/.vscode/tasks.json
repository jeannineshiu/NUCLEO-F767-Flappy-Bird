{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build project",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "/usr/bin/make",
            "args": [
                "-C",
                "../../",
                "GCC_PATH=/usr/bin",
                "-j8"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Delete build folder",
            "type": "shell",
            "command": "/usr/bin/make",
            "args": [
                "-C",
                "../../",
                "clean"
            ],
            "problemMatcher": [],
            "presentation": {
                "focus": false
            }
        },
        {
            "label": "CPU: Build, Download and run",
            "type": "shell",
            "command": "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/bin/openocd.linux",
            "args": [
                "-f",
                "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/scripts/interface/stlink.cfg",
                "-f",
                "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/scripts/target/stm32f7x.cfg",
                "-c",
                "program ../../build/target.elf verify reset exit"
            ],
            "problemMatcher": [],
            "dependsOn": "Build project"
        },
        {
            "label": "CPU: Download and run",
            "type": "shell",
            "command": "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/bin/openocd.linux",
            "args": [
                "-f",
                "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/scripts/interface/stlink.cfg",
                "-f",
                "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/scripts/target/stm32f7x.cfg",
                "-c",
                "program ../../build/target.elf verify reset exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "CPU: Reset and run",
            "type": "shell",
            "command": "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/bin/openocd.linux",
            "args": [
                "-f",
                "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/scripts/interface/stlink.cfg",
                "-f",
                "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/scripts/target/stm32f7x.cfg",
                "-c init",
                "-c reset",
                "-c exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "CPU: Halt",
            "type": "shell",
            "command": "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/bin/openocd.linux",
            "args": [
                "-f",
                "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/scripts/interface/stlink.cfg",
                "-f",
                "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/scripts/target/stm32f7x.cfg",
                "-c init",
                "-c halt",
                "-c exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "CPU: Run",
            "type": "shell",
            "command": "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/bin/openocd.linux",
            "args": [
                "-f",
                "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/scripts/interface/stlink.cfg",
                "-f",
                "${workspaceFolder}/../../../../toolchain/openocd/0.10.0-12-20190422-2015/scripts/target/stm32f7x.cfg",
                "-c init",
                "-c resume",
                "-c exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "Open CubeMX project",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/../../scripts/openCubeMX.py"
            ],
            "presentation": {
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}